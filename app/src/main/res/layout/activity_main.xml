<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A467D58C"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/billCostEdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:hint="Cost of bill"
        android:inputType="numberDecimal"
        android:textColor="@color/colorInputText"
        android:textColorHint="@color/colorHntText" />

    <EditText
        android:id="@+id/quaSerEdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:hint="Review of staff service"
        android:textColor="@color/colorInputText"
        android:textColorHint="@color/colorHntText" />

    <EditText
        android:id="@+id/tipPerEdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:hint="Enter Tip Percentage(Ex:20(%), 15(%), etc.)"
        android:inputType="numberDecimal"
        android:textColor="@color/colorInputText"
        android:textColorHint="@color/colorHntText"

        />

    <Button
        android:id="@+id/billCalcButton"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle"
        android:onClick="calcTip"
        android:text="Calculate Tip"
        android:textColor="@color/colorBtnText"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tipTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorRtnText" />

</androidx.appcompat.widget.LinearLayoutCompat>